{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "markdown-ide",
  "version": "0.1.0",
  "identifier": "com.yourname.markdownide",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown IDE",
        "width": 1250,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "scope": ["open"]
    },
    "http": {
      "scope": ["http://localhost:*"]
    }
  }
}